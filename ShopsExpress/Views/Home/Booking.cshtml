@model ShopsExpress.Models.Product
@{
    ViewBag.Title = Model.productName;
}
<h2> @Model.productName</h2>
<div class="container">
    <div class="row">

        <div class="col-sm">
            <img class="img-thumbnail" src="@Model.productImg" alt="" />
            <h2>@Model.productName</h2>
            <p>@Model.productDesc</p>
            @using (Html.BeginForm())
            {
        <form asp-action="booking" asp-controller="home">
            <div class="form-group">
                <div class="form-group">
                    <input class="col-sm-12 control-label" type="hidden" name="idProd" value="@Model.productId">
                    <label for="inputPassword3" class="col-sm-2 control-label">Количество на складе: @Model.productQua</label>
                    <div class="col-sm-10">
                        <input type="number" name="kolpr" value="@Model.productQua" min="0" max="@Model.productQua" step="1" width-setter="10" required />
                    </div>
                </div>
                <div class="form-group">
                    <div class="form-group">
                        <label for="inputPassword3" class="col-sm-2 control-label">Ваше имя:</label>
                        <div class="col-sm-10">
                            <input class="form-control" type="text" name="nameUs" maxlength="50" required />
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <div class="form-group">
                        <label for="inputPassword3" class="col-sm-2 control-label">Ваша электронная почта:</label>
                        <div class="col-sm-10">
                            <input class="form-control" type="email" name="emailUs" maxlength="50" required />
                        </div>
                    </div>
                </div>
            </div>
            <input type="submit" value="Отправить" class="btn btn-primary" />
            @if (@ViewBag.result == 0)
                {
                    
                }

        </form>
            }
            <!--<asp:Panel>
                <div id="NoRecords" runat="server" visible="false" class="modal fade bd-example-modal-sm" tabindex="-1" role="dialog" aria-labelledby="mySmallModalLabel" aria-hidden="true">
                    <div class="modal-dialog modal-sm">
                        <div class="modal-content">
                            Выберите корректное количество товаров
                        </div>
                    </div>
                </div>
            </asp:Panel>-->
        </div>
    </div>
</div>